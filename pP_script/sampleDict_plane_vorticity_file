FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    location        system;
    object          sampleDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type surfaces;
libs    ("libsampling.so");

setFormat           csv;

surfaceFormat       raw;
interpolationScheme cellPoint; // Face; -> fluctuations


surfaces
(
    xc06
    {
  
        type            plane;    // always triangulated
        planeType		pointAndNormal;
        pointAndNormalDict
        {
        basePoint       (1 0 0);
        normalVector    (1 0 0);
        }
        interpolate		true;
		triangulate		true;         
    }
    
);


// Fields to sample.
fields
(
    vorticity
   Lambda2
 //  U
	 p
//  Lambda2Mean
);



